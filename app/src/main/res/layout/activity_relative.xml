<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@color/verde"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@color/rojo"
        android:layout_toRightOf="@id/img1"
        />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@color/naranja"
        android:layout_below="@id/img2"
        android:layout_toRightOf="@id/img1"
        />
    <ImageView
        android:id="@+id/img4"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@color/azul"
        android:layout_below="@id/img2"
        android:layout_toRightOf="@id/img3"
        />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img"
        android:src="@color/violeta"
        android:layout_below="@id/img2"
        android:layout_toRightOf="@id/img4"
        />
    <ImageView
        android:id="@+id/img6"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@color/amarillo"
        android:layout_below="@id/img4"
        android:layout_toRightOf="@id/img3"
        />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:layout_below="@id/img5"
        android:layout_alignParentRight="true"
        android:src="@color/verde"
        />

    <ImageView
        android:id="@+id/img8"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:layout_centerInParent="true"
        android:src="@color/azul"
        />

    <ImageView
        android:id="@+id/img9"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@color/rojo"
        />

    <ImageView
        android:id="@+id/img10"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:layout_alignParentRight="true"
        android:layout_above="@id/img9"
        android:src="@color/violeta"
        />

    <ImageView
        android:id="@+id/img11"
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@color/amarillo"
        android:layout_above="@id/img9"
        />


</RelativeLayout>